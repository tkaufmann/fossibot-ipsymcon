{
    "elements": [
        {
            "type": "ExpansionPanel",
            "caption": "Fossibot Account-Konfiguration",
            "expanded": true,
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "Email",
                    "caption": "E-Mail-Adresse"
                },
                {
                    "type": "PasswordTextBox",
                    "name": "Password",
                    "caption": "Passwort"
                },
                {
                    "type": "Label",
                    "caption": "Geben Sie Ihre Fossibot-Zugangsdaten ein und klicken Sie 'Geräte suchen'.",
                    "italic": true
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Übernehmen",
            "onClick": "IPS_ApplyChanges($id);"
        },
        {
            "type": "Button", 
            "caption": "Geräte suchen",
            "onClick": "IPS_RequestAction($id, 'DiscoverDevices', true);"
        }
    ]
}